<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="it_returns_tax_section24_tree" model="ir.ui.view">
        <field name="name">tax.section24.tree</field>
        <field name="model">tax.section24</field>
        <field name="arch" type="xml">
            <tree string="Section 24">
                <field name="name"/>
                <field name="limit_amount"/>
            </tree>
        </field>
    </record>

    <record id="it_returns_tax_section24_form" model="ir.ui.view">
        <field name="name">tax.section24.form</field>
        <field name="model">tax.section24</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="limit_amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_it_returns_tax_section24">
        <field name="name">Section 24</field>
        <field name="res_model">tax.section24</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>